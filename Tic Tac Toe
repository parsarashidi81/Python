field = [
    [" ", " ", " "],
    [" ", " ", " "],
    [" ", " ", " "]
]


# Print the field
for row in field:
    print("|".join(row))

ans = str(input("Enter your symbol (X/O): "))
posRow = int(input("Which row (Starting from 0): "))
posCol = int(input("Which column (Starting from 0): "))


field[posRow][posCol] = ans

for row in field:
    print("|".join(row))
